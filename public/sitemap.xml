/* HERO SECTION */

header {
  min-height: 90vh;

  background:
    linear-gradient(
      180deg,
      rgba(255,255,255,0.30) 0%,
      rgba(247,248,250,0.40) 100%
    ),
    url("/assets/office.png") center center / cover no-repeat;

  display: flex;
  flex-direction: column;

  align-items: center;
  justify-content: center;

  text-align: center;

  background-attachment: fixed;

  padding: 80px 20px;

  color: #0f172a;
}

/* HERO TEXT */

header h1{
  font-size: 44px;
  font-weight: 700;
  margin-bottom: 20px;
}

header p{
  font-size: 18px;
  color: #334155;
  max-width: 700px;
}

/* MOBILE OPTIMIZATION */

@media(max-width:768px){

  header{
    background-attachment: scroll;
    padding: 60px 20px;
  }

  header h1{
    font-size: 30px;
  }

}
